<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>Exe</OutputType>
        <TargetFramework>net6.0</TargetFramework>
        <DockerDefaultTargetOS>Linux</DockerDefaultTargetOS>
    </PropertyGroup>

    <ItemGroup>
      <Content Include=".dockerignore" />
      <Content Include="Dockerfile" />
      <Compile Include="Models\Config.fs" />
      <Compile Include="Models\LoginRequestData.fs" />
      <Compile Include="Models\Dialog\DialogOptions.fs" />
      <Compile Include="Models\State.fs" />
      <Compile Include="Handlers\ReadyResponder.fs" />
      <Compile Include="Program.fs" />
      <Content Include="Config\config.yaml">
