      <PackageReference Include="Remora.Discord.Hosting" Version="4.0.9" />
      <PackageReference Include="Remora.Discord.Interactivity" Version="1.0.3" />
      <PackageReference Include="Remora.Discord.Pagination" Version="1.0.4" />
      <PackageReference Include="Remora.Discord.Rest" Version="27.1.0" />
      <PackageReference Include="Thoth.Json.Net" Version="8.0.0" />
      <PackageReference Include="YamlDotNet" Version="11.2.1" />
    </ItemGroup>

</Project>
